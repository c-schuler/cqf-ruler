    <servlet-mapping>
        <servlet-name>cdsHooksDstu2</servlet-name>
        <url-pattern>dstu2/cds-services</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>cdsHooksDstu2</servlet-name>
        <url-pattern>dstu2/cds-services/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>cdsHooksStu3</servlet-name>
        <url-pattern>stu3/cds-services</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>cdsHooksStu3</servlet-name>
        <url-pattern>stu3/cds-services/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>bulkDataResults</servlet-name>
        <url-pattern>/baseDstu3/export-results/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>on-measure-subscription-mrp</servlet-name>
        <url-pattern>/on-measure-subscription-mrp</url-pattern>
    </servlet-mapping>

